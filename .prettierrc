{
  "singleQuote": true,
  "printWidth": 120,
  "trailingComma": "es5",
  "tabWidth": 4,
  "overrides": [
    {
      "files": "*.ts*",
      "options": {
        "semi": false
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "semi": true
      }
    }
  ]
}
